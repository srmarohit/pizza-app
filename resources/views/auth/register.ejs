<section class="login flex justify-center py-12">
    <!-- Paste Tailwind form design here.. -->
 
    <div class="w-full max-w-xs">
      <p class="text-center mb-1 text-xs text-muted">Signin with </p>
      <p class="text-center mb-1">
        <a href="/auth/facebook">
         <i class="lab la-facebook social-icon-fb"></i>
        </a>
        <a href="/auth/instagram">
         <i class="lab la-instagram social-icon-insta"></i>
        </a>
        <a href="/auth/google">
         <i class="lab la-goodreads social-icon-google"></i>
        </a>
      </p>
      <p class="text-center mb-1 text-muted"> or</p>
 
     <form action="/register" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
         <!-- define span tage for flash message -->
         <% if(messages.error) { %>
          <span class="text-red-500 text-sm"><%= messages.error %></span>
          <% } %>
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="name">
              Name
            </label>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" name="name" value="<%= messages.name %>" type="text" placeholder="Enter Your name">
        </div>  
       <div class="mb-4">
         <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
           Email
         </label>
         <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="email" name="email" value="<%= messages.email %>" type="email" placeholder="Enter Your Email">
       </div>
       <div class="mb-6">
         <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
           Password
         </label>
         <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="password" name="password" type="password" placeholder="**********">
       </div>
       <div class="flex items-center justify-between">
         <button class="btn-primary rounded-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
           Sign Up
         </button>
         <a class="inline-block align-baseline font-bold text-sm" href="/login">
           Already have an Account !
         </a>
       </div>
     </form>
     <p class="text-center text-gray-500 text-xs">
       &copy;2020 Technical Crush. All rights reserved.
     </p>
   </div>
 
 </section>