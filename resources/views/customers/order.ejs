<!-- create order page to display all order placed by customer -->
<h1 id="helo">Hello</h1>

<section class="orders light-section">
    <div class="container mx-auto pt-12">
        <h1 class="font-bold text-lg mb-4">All Orders</h1>

        <% if(messages.success) { %>
        <div id="success-alert" class="flex items-center bg-green-500 text-white font-bold text-sm px-4 py-3" role="alert">
            <p><%= messages.success %></p> <!-- goes off after 2min. (code written in app.js )-->
        </div> <!-- alert div ends -->
        <% } %>
        
        <!--create table to display all orders -->
        <table class="w-full table-auto bg-white">
            <thead>
                <tr>
                    <th class="px-4 py-2 text-left">Orders</th>
                    <th class="px-4 py-2 text-left">Phone</th>
                    <th class="px-4 py-2 text-left">Address</th>
                    <th class="px-4 py-2 text-left">Time</th>
                </tr>
            </thead>
            <tbody>
                <!-- check orders -->
                <% if(orders.length) { 
                     orders.forEach(order => {
                %>
                <tr>
                    <td class="border px-4 py-2">
                        <a class="link" href="/"><%= order._id %></a>
                    </td>
                    <td class="border px-4 py-2"><%= order.phone %></td>
                    <td class="border px-4 py-2"><%= order.address %></td>
                    <td class="border px-4 py-2"><%= moment(order.createdAt).format('hh:mm A') %></td>
                </tr>
                <% }) 
            } else {
                %>
             <!-- display no orders found -->
             <tr>
             <td class="border px-4 py-2"><span>No orders Found !</span></td>
             </tr>
            <% } %>
            </tbody>
        </table>
    </div>
</section>